<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/CiviGeometry</base>
  <class>GeometryType</class>
  <name>civigeometry_geometry_type</name>
  <comment>Geometry Types</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique GeometryType ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>The title of the Geometry Type</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
     <name>index_label</name>
     <fieldName>label</fieldName>
     <unique>true</unique>
  </index>
  <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <default>true</default>
    <comment>The description of the Geometry Type</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

</table>
